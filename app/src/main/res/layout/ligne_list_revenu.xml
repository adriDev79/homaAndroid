<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/ll_revenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ligne_list_revenu_libelle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Lorem ipsum blablabla blablabla"
            android:textSize="15sp"
            android:textColor="#273746"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_ligne_list_revenu_montant"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1582.00$"
            android:textColor="#27AE60"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center|right"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_label_recu_le"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recu_le"
        android:textSize="12sp"
        android:textColor="#273746"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/ll_revenu"/>

    <TextView
        android:id="@+id/tv_date_reception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        android:textSize="12sp"
        android:textColor="#273746"
        android:textStyle="bold"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/ll_revenu"/>

</RelativeLayout>